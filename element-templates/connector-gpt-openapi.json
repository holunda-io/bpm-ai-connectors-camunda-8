{
  "$schema": "https://unpkg.com/@camunda/zeebe-element-templates-json-schema/resources/schema.json",
  "name": "GPT OpenAPI REST Connector",
  "id": "io.holunda.connector.openapi.v1",
  "description": "Performs one or more REST requests to fulfill the task",
  "version": 1,
  "documentationRef": "https://docs.camunda.io/docs/components/connectors/out-of-the-box-connectors/available-connectors-overview/",
  "icon": {
    "contents": "data:image/svg+xml;base64,"
  },
  "category": {
    "id": "connectors",
    "name": "Connectors"
  },
  "appliesTo": ["bpmn:Task"],
  "elementType": {
    "value": "bpmn:ServiceTask"
  },
  "groups": [
    {
      "id": "general",
      "label": "General"
    },
    {
      "id": "input",
      "label": "Input"
    },
    {
      "id": "service",
      "label": "Service"
    },
    {
      "id": "task",
      "label": "Task"
    },
    {
      "id": "output",
      "label": "Output Mapping"
    }
  ],
  "properties": [
    {
      "type": "Hidden",
      "value": "gpt-openapi",
      "binding": {
        "type": "zeebe:taskDefinition:type"
      }
    },
    {
      "label": "OpenAI API Key",
      "description": "The OpenAI API Key to use",
      "type": "Hidden",
      "value": "secrets.OPENAI_API_KEY",
      "binding": {
        "type": "zeebe:input",
        "name": "apiKey"
      },
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "id": "model",
      "label": "LLM Model",
      "group": "general",
      "type": "Dropdown",
      "value": "GPT_3",
      "choices": [
        { "name": "OpenAI GPT-3.5 Turbo", "value": "GPT_3" },
        { "name": "OpenAI GPT-4", "value": "GPT_4" }
      ],
      "binding": {
        "type": "zeebe:input",
        "name": "model"
      }
    },
    {
      "label": "Input Variables",
      "group": "input",
      "description": "Map of input variables to provide context. Key should be the variable name. Value is the variable itself as FEEL expression.",
      "type": "Text",
      "feel": "required",
      "binding": {
        "type": "zeebe:input",
        "name": "inputJson"
      },
      "value": "{ \"myVariable\": myVariable }",
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "label": "OpenAPI Spec URL",
      "description": "URL to an OpenAPI 2/3 JSON spec",
      "group": "service",
      "type": "String",
      "feel": "optional",
      "value": "",
      "binding": {
        "type": "zeebe:input",
        "name": "specUrl"
      },
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "label": "Task Description",
      "description": "Describe what should be done.",
      "group": "task",
      "type": "Text",
      "feel": "optional",
      "value": "",
      "binding": {
        "type": "zeebe:input",
        "name": "query"
      },
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "label": "Result Schema",
      "description": "Specify the result schema. Must be a map from result field names to descriptions of what that field should contain.",
      "group": "task",
      "type": "Text",
      "feel": "required",
      "value": "={\n  name: \"full name\",\n  birthdate: \"birthday in ISO format\"\n}",
      "binding": {
        "type": "zeebe:input",
        "name": "outputSchema"
      },
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "label": "Missing Data Behavior",
      "description": "What to do if requested data could not be found.",
      "group": "task",
      "type": "Dropdown",
      "value": "NULL",
      "choices": [
        { "name": "Return Null", "value": "NULL" },
        { "name": "Return Empty String", "value": "EMPTY" },
        { "name": "Throw Error", "value": "ERROR" }
      ],
      "binding": {
        "type": "zeebe:input",
        "name": "missingDataBehavior"
      }
    },
    {
      "label": "Result Expression",
      "description": "Expression to map the result into process variables. Result is in a temporary variable <code>result</code>.",
      "group": "output",
      "type": "Text",
      "feel": "required",
      "value": "={\"result\": result}",
      "binding": {
        "type": "zeebe:taskHeader",
        "key": "resultExpression"
      }
    }
  ]
}
