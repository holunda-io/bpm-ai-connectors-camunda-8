{
  "$schema": "https://unpkg.com/@camunda/zeebe-element-templates-json-schema/resources/schema.json",
  "name": "GPT Generic Connector",
  "id": "io.holunda.connector.generic.v1",
  "description": "Run any prompt against GPT",
  "version": 1,
  "documentationRef": "https://docs.camunda.io/docs/components/connectors/out-of-the-box-connectors/available-connectors-overview/",
  "icon": {
    "contents": "data:image/svg+xml;base64,"
  },
  "category": {
    "id": "connectors",
    "name": "Connectors"
  },
  "appliesTo": ["bpmn:Task"],
  "elementType": {
    "value": "bpmn:ServiceTask"
  },
  "groups": [
    {
      "id": "general",
      "label": "General"
    },
    {
      "id": "input",
      "label": "Input"
    },
    {
      "id": "task",
      "label": "Task"
    },
    {
      "id": "output",
      "label": "Output Mapping"
    }
  ],
  "properties": [
    {
      "type": "Hidden",
      "value": "gpt-generic",
      "binding": {
        "type": "zeebe:taskDefinition:type"
      }
    },
    {
      "label": "OpenAI API Key",
      "description": "The OpenAI API Key to use",
      "type": "Hidden",
      "value": "secrets.OPENAI_API_KEY",
      "binding": {
        "type": "zeebe:input",
        "name": "apiKey"
      },
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "id": "model",
      "label": "GPT Model",
      "group": "general",
      "type": "Dropdown",
      "value": "gpt-3.5-turbo",
      "choices": [
        { "name": "Standard precision, fast, cheap", "value": "gpt-3.5-turbo" },
        { "name": "Highest precision, slow, expensive", "value": "gpt-4" }
      ],
      "binding": {
        "type": "zeebe:input",
        "name": "model"
      }
    },
    {
      "label": "Input Variables",
      "group": "input",
      "description": "Map of input variables to extract data from. Key should be the variable name. Value is the variable itself as FEEL expression.",
      "type": "Text",
      "feel": "required",
      "binding": {
        "type": "zeebe:input",
        "name": "inputJson"
      },
      "value": "{ \"myVariable\": myVariable }",
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "label": "Task Description",
      "description": "Describe what the model should do.",
      "group": "task",
      "type": "Text",
      "feel": "optional",
      "value": "Perform task X and store the result in the result field. Also describe the reasoning behind your result.",
      "binding": {
        "type": "zeebe:input",
        "name": "taskDescription"
      },
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "label": "Output Format",
      "description": "JSON schema for the output",
      "group": "task",
      "type": "Text",
      "feel": "optional",
      "value": "={\n  result: \"the result of the task\",\n  reasoning: \"the reasoning behind the task result\"\n}",
      "binding": {
        "type": "zeebe:input",
        "name": "outputFormat"
      },
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "label": "Result Variable",
      "description": "Name of variable to store the result in",
      "group": "output",
      "type": "String",
      "binding": {
        "type": "zeebe:taskHeader",
        "key": "resultVariable"
      }
    },
    {
      "label": "Result Expression",
      "description": "Expression to map the result into process variables",
      "group": "output",
      "type": "Text",
      "feel": "required",
      "binding": {
        "type": "zeebe:taskHeader",
        "key": "resultExpression"
      }
    }
  ]
}
