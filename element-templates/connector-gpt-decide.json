{
  "$schema": "https://unpkg.com/@camunda/zeebe-element-templates-json-schema/resources/schema.json",
  "name": "GPT Decision Connector",
  "id": "io.holunda.connector.decide.v1",
  "description": "Makes decisions based on input variables",
  "version": 1,
  "documentationRef": "https://docs.camunda.io/docs/components/connectors/out-of-the-box-connectors/available-connectors-overview/",
  "icon": {
    "contents": "data:image/svg+xml;base64,"
  },
  "category": {
    "id": "connectors",
    "name": "Connectors"
  },
  "appliesTo": ["bpmn:Task"],
  "elementType": {
    "value": "bpmn:ServiceTask"
  },
  "groups": [
    {
      "id": "model",
      "label": "Model"
    },
    {
      "id": "input",
      "label": "Input"
    },
    {
      "id": "decision",
      "label": "Decision"
    },
    {
      "id": "output",
      "label": "Output Mapping"
    }
  ],
  "properties": [
    {
      "type": "Hidden",
      "value": "io.holunda:connector-decide:1",
      "binding": {
        "type": "zeebe:taskDefinition:type"
      }
    },
    {
      "id": "model",
      "label": "LLM",
      "group": "model",
      "type": "Dropdown",
      "value": "GPT_3",
      "choices": [
        { "name": "OpenAI GPT-3.5 Turbo", "value": "GPT_3" },
        { "name": "OpenAI GPT-4", "value": "GPT_4" },
        { "name": "Aleph Alpha Luminous Supreme", "value": "LUMINOUS_SUPREME" },
        { "name": "Cohere Chat Command", "value": "COHERE_CHAT_COMMAND" }
      ],
      "binding": {
        "type": "zeebe:input",
        "name": "model"
      }
    },
    {
      "label": "Input Variables",
      "group": "input",
      "description": "Map of input variables to consider for the decision. Key should be the variable name. Value is the variable itself as FEEL expression.",
      "type": "Text",
      "feel": "optional",
      "binding": {
        "type": "zeebe:input",
        "name": "inputJson"
      },
      "value": "={ \"myVariable\": myVariable }",
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "label": "Instructions",
      "description": "Instructions on what and how to decide.",
      "group": "decision",
      "type": "Text",
      "feel": "optional",
      "value": "Decide ...",
      "binding": {
        "type": "zeebe:input",
        "name": "instructions"
      },
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "id": "outputType",
      "label": "Output Type",
      "group": "decision",
      "type": "Dropdown",
      "value": "STRING",
      "choices": [
        { "name": "Boolean", "value": "BOOLEAN" },
        { "name": "Integer", "value": "INTEGER" },
        { "name": "String", "value": "STRING" }
      ],
      "binding": {
        "type": "zeebe:input",
        "name": "outputType"
      }
    },
    {
      "label": "Possible Values",
      "description": "Optional list of possible output values. If not provided, the model can output any value of the given type.",
      "group": "decision",
      "type": "Text",
      "feel": "optional",
      "optional": true,
      "value": "=[\n  \"OPTION_1\",\n  \"OPTION_2\",\n  \"OPTION_3\",\n  \"OTHER\"\n]",
      "binding": {
        "type": "zeebe:input",
        "name": "possibleValues"
      },
      "condition": {
        "property": "outputType",
        "oneOf": ["INTEGER", "STRING"]
      }
    },
    {
      "label": "Result Expression",
      "description": "Expression to map the result into process variables. Result is in a temporary variable <code>result</code>, with fields <code>result.decision</code> and <code>result.reasoning</code>.",
      "group": "output",
      "type": "Text",
      "feel": "required",
      "value": "={\n  decision: result.decision,\n  reasoning: result.reasoning\n}",
      "binding": {
        "type": "zeebe:taskHeader",
        "key": "resultExpression"
      }
    }
  ]
}
