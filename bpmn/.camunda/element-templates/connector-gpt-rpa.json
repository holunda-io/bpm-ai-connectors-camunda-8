{
  "$schema": "https://unpkg.com/@camunda/zeebe-element-templates-json-schema/resources/schema.json",
  "name": "Auto RPA Connector",
  "id": "io.holunda.connector.rpa.v1",
  "description": "Instruments browser-based applications.",
  "version": 1,
  "documentationRef": "https://docs.camunda.io/docs/components/connectors/out-of-the-box-connectors/available-connectors-overview/",
  "icon": {
    "contents": "data:image/svg+xml;base64,"
  },
  "category": {
    "id": "connectors",
    "name": "Connectors"
  },
  "appliesTo": ["bpmn:Task"],
  "elementType": {
    "value": "bpmn:ServiceTask"
  },
  "groups": [
    {
      "id": "model",
      "label": "Model"
    },
    {
      "id": "input",
      "label": "Input"
    },
    {
      "id": "browser",
      "label": "Browser"
    },
    {
      "id": "task",
      "label": "Task"
    },
    {
      "id": "output",
      "label": "Output Mapping"
    },
    {
      "id": "errors",
      "label": "Errors"
    }
  ],
  "properties": [
    {
      "type": "Hidden",
      "value": "io.holunda:connector-rpa:1",
      "binding": {
        "type": "zeebe:taskDefinition:type"
      }
    },
    {
      "id": "model",
      "label": "LLM",
      "group": "model",
      "type": "Dropdown",
      "value": "GPT_4",
      "choices": [
        { "name": "OpenAI GPT-3.5 Turbo", "value": "GPT_3" },
        { "name": "OpenAI GPT-4 Turbo", "value": "GPT_4" }
      ],
      "binding": {
        "type": "zeebe:input",
        "name": "model"
      }
    },
    {
      "label": "Input Variables",
      "group": "input",
      "description": "Map of input variables to provide context. Key should be the variable name. Value is the variable itself as FEEL expression.",
      "type": "Text",
      "feel": "optional",
      "binding": {
        "type": "zeebe:input",
        "name": "inputJson"
      },
      "value": "={ \"myVariable\": myVariable }",
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "label": "Start URL",
      "group": "browser",
      "type": "String",
      "feel": "optional",
      "value": "",
      "binding": {
        "type": "zeebe:input",
        "name": "startUrl"
      },
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "label": "Task Description",
      "description": "The task to execute or question to be answered.",
      "group": "task",
      "type": "Text",
      "feel": "optional",
      "value": "",
      "binding": {
        "type": "zeebe:input",
        "name": "task.task"
      },
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "id": "output_type",
      "label": "Output Type",
      "group": "task",
      "type": "Dropdown",
      "value": "natural",
      "choices": [
        { "name": "Natural Language Answer", "value": "natural" },
        { "name": "JSON", "value": "json" }
      ],
      "binding": {
        "type": "zeebe:input",
        "name": "task.outputType"
      }
    },
    {
      "label": "Output Schema",
      "description": "JSON schema for the output",
      "group": "task",
      "type": "Text",
      "feel": "required",
      "value": "={\n  name: \"full name\",\n  birthdate: \"birthday in ISO format\"\n}",
      "binding": {
        "type": "zeebe:input",
        "name": "task.outputSchema"
      },
      "condition": {
        "property": "output_type",
        "equals": "json"
      }
    },
    {
      "label": "Result Expression",
      "description": "Expression to map the result into process variables. Result is in a temporary variable <code>result</code>.",
      "group": "output",
      "type": "Text",
      "feel": "required",
      "value": "={answer: result}",
      "binding": {
        "type": "zeebe:taskHeader",
        "key": "resultExpression"
      }
    },
    {
      "label": "Error Expression",
      "description": "Expression to handle errors. Details in the <a href=\"https://docs.camunda.io/docs/components/connectors/use-connectors/#bpmn-errors\" target=\"_blank\">documentation</a>",
      "group": "errors",
      "type": "Text",
      "feel": "required",
      "binding": {
        "type": "zeebe:taskHeader",
        "key": "errorExpression"
      }
    }
  ]
}
