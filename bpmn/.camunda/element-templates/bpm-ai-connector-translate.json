{
  "$schema": "https://unpkg.com/@camunda/zeebe-element-templates-json-schema/resources/schema.json",
  "name": "BPM AI Translate Connector",
  "id": "io.holunda.connector.translate.v1",
  "description": "Translate documents, audio or text from variables into any language",
  "version": 2,
  "documentationRef": "https://github.com/holunda-io/bpm-ai-connectors-camunda-8",
  "icon": {
    "contents": "data:image/svg+xml;base64,"
  },
  "category": {
    "id": "connectors",
    "name": "Connectors"
  },
  "appliesTo": ["bpmn:Task"],
  "elementType": {
    "value": "bpmn:ServiceTask"
  },
  "groups": [
    {
      "id": "model",
      "label": "Model"
    },
    {
      "id": "input",
      "label": "Input"
    },
    {
      "id": "translate",
      "label": "Translate"
    },
    {
      "id": "output",
      "label": "Output Mapping"
    }
  ],
  "properties": [
    {
      "type": "Hidden",
      "value": "io.holunda:connector-translate:2",
      "binding": {
        "type": "zeebe:taskDefinition:type"
      }
    },
    {
      "id": "llm",
      "label": "LLM",
      "group": "model",
      "type": "Dropdown",
      "value": "gpt-4-turbo-preview",
      "choices": [
        { "name": "OpenAI GPT-3.5 Turbo", "value": "gpt-3.5-turbo" },
        { "name": "OpenAI GPT-4", "value": "gpt-4" },
        { "name": "OpenAI GPT-4 Turbo Preview", "value": "gpt-4-turbo-preview" },
        { "name": "None", "value": "none" }
      ],
      "binding": {
        "type": "zeebe:input",
        "name": "llm"
      }
    },
    {
      "id": "translation",
      "label": "Translation Model",
      "group": "model",
      "type": "Dropdown",
      "value": "Helsinki-NLP/opus-mt-{}-{}",
      "choices": [
        { "name": "Opus-MT (local)", "value": "Helsinki-NLP/opus-mt-{}-{}" }
      ],
      "binding": {
        "type": "zeebe:input",
        "name": "nmt"
      },
      "condition": {
        "property": "llm",
        "equals": "none"
      }
    },
    {
      "label": "HuggingFace Hub Translation Model",
      "group": "model",
      "type": "String",
      "value": "Helsinki-NLP/opus-mt-{}-{}",
      "feel": "optional",
      "binding": {
        "type": "zeebe:input",
        "name": "custom_nmt"
      },
      "condition": {
        "property": "translation",
        "equals": "custom"
      }
    },
    {
      "label": "OCR Model",
      "group": "model",
      "type": "Dropdown",
      "value": "none",
      "choices": [
        { "name": "None", "value": "none" },
        { "name": "Tesseract (local)", "value": "tesseract" }
      ],
      "binding": {
        "type": "zeebe:input",
        "name": "ocr"
      }
    },
    {
      "label": "Speech Recognition Model",
      "group": "model",
      "type": "Dropdown",
      "value": "openai-whisper-1",
      "choices": [
        { "name": "None", "value": "none" },
        { "name": "OpenAI Whisper API", "value": "openai-whisper-1" },
        { "name": "OpenAI Whisper Small (local)", "value": "faster_whisper-small" },
        { "name": "OpenAI Whisper Medium (local)", "value": "faster_whisper-medium" },
        { "name": "OpenAI Whisper Large (local)", "value": "faster_whisper-large" }
      ],
      "binding": {
        "type": "zeebe:input",
        "name": "asr"
      }
    },
    {
      "label": "Input Variables",
      "group": "input",
      "description": "Map of input variables to translate. Key should be the variable name. Value is the variable itself as FEEL expression.",
      "type": "Text",
      "feel": "optional",
      "binding": {
        "type": "zeebe:input",
        "name": "input_json"
      },
      "value": "={ \"myVariable\": myVariable }",
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "label": "Target Language",
      "group": "translate",
      "type": "String",
      "feel": "optional",
      "value": "English",
      "binding": {
        "type": "zeebe:input",
        "name": "language"
      },
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "label": "Result Expression",
      "description": "Expression to map the result into process variables. Result is in a temporary variable <code>result</code>, with fields for every translated field as specified in Input Variables.",
      "group": "output",
      "type": "Text",
      "feel": "required",
      "value": "={myVariableTranslated: result.myVariable}",
      "binding": {
        "type": "zeebe:taskHeader",
        "key": "result_expression"
      }
    }
  ]
}
