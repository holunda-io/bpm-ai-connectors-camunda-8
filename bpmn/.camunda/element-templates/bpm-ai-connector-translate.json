{
  "$schema": "https://unpkg.com/@camunda/zeebe-element-templates-json-schema/resources/schema.json",
  "name": "BPM AI Translate Connector",
  "id": "io.holunda.connector.translate.v1",
  "description": "Translate documents, audio or text from variables into any language",
  "version": 2,
  "documentationRef": "https://github.com/holunda-io/bpm-ai-connectors-camunda-8",
  "icon": {
    "contents": "data:image/svg+xml;base64,"
  },
  "category": {
    "id": "connectors",
    "name": "Connectors"
  },
  "appliesTo": ["bpmn:Task"],
  "elementType": {
    "value": "bpmn:ServiceTask"
  },
  "groups": [
    {
      "id": "model",
      "label": "Model"
    },
    {
      "id": "input",
      "label": "Input"
    },
    {
      "id": "translate",
      "label": "Translate"
    },
    {
      "id": "output",
      "label": "Output Mapping"
    }
  ],
  "properties": [
    {
      "type": "Hidden",
      "value": "io.holunda:connector-translate:2",
      "binding": {
        "type": "zeebe:taskDefinition:type"
      }
    },
   {
      "id": "llm",
      "label": "LLM / Model",
      "group": "model",
      "type": "Dropdown",
      "value": "gpt-4-turbo",
      "choices": [
        { "name": "Anthropic Claude 3.5 Sonnet (best)", "value": "claude-3-5-sonnet-latest" },
        { "name": "Anthropic Claude 3 Opus", "value": "claude-3-opus-latest" },
        { "name": "Anthropic Claude 3 Haiku (fastest)", "value": "claude-3-haiku-latest" },
        { "name": "OpenAI GPT-4o", "value": "gpt-4o" },
        { "name": "OpenAI GPT-4o mini", "value": "gpt-4o-mini" },
        { "name": "OpenAI GPT-4 Turbo", "value": "gpt-4-turbo" },
        { "name": "OpenAI GPT-4", "value": "gpt-4" },
        { "name": "OpenAI GPT-3.5 Turbo", "value": "gpt-3.5-turbo" },
        { "name": "Azure OpenAI", "value": "azure-openai" },
        { "name": "OpenAI Compatible Server", "value": "openai-compatible" },
        { "name": "Groq Llama 3 70B", "value": "groq-llama3-70b-8192" },
        { "name": "Local LLM", "value": "local-llm" },
        { "name": "Neural Machine Translation", "value": "none" }
      ],
      "binding": {
        "type": "zeebe:input",
        "name": "llm"
      }
    },
        {
      "label": "Local LLM",
      "group": "model",
      "type": "Dropdown",
      "value": "QuantFactory/Phi-3-mini-4k-instruct-GGUF",
      "choices": [
        { "name": "Meta Llama 3.1 8B (local)", "value": "bartowski/Hermes-3-Llama-3.1-8B-GGUF" },
        { "name": "Meta Llama 3.2 3B (local)", "value": "unsloth/Llama-3.2-3B-Instruct-GGUF" },
        { "name": "Meta Llama 3.2 1B (local)", "value": "unsloth/Llama-3.2-1B-Instruct-GGUF" },
        { "name": "Microsoft Phi-3 Mini (local)", "value": "QuantFactory/Phi-3-mini-4k-instruct-GGUF" },
        { "name": "Mistral 7B (local)", "value": "NousResearch/Hermes-2-Pro-Mistral-7B-GGUF" }
      ],
      "binding": {
        "type": "zeebe:input",
        "name": "local_llm"
      },
      "condition": {
        "property": "llm",
        "equals": "local-llm"
      }
    },
    {
      "label": "LLM Precision",
      "group": "model",
      "type": "Dropdown",
      "value": "*Q5_K_M.gguf",
      "choices": [
        { "name": "Low (smallest & fastest)", "value": "*Q2_K.gguf" },
        { "name": "Balanced", "value": "*Q5_K_M.gguf" },
        { "name": "High (largest & slowest)", "value": "*Q8_0.gguf" }
      ],
      "binding": {
        "type": "zeebe:input",
        "name": "model_filename"
      },
      "condition": {
        "property": "llm",
        "equals": "local-llm"
      }
    },
    {
      "label": "Model ID",
      "group": "model",
      "type": "String",
      "value": "",
      "feel": "optional",
      "binding": {
        "type": "zeebe:input",
        "name": "custom_llm"
      },
      "condition": {
        "property": "llm",
        "equals": "openai-compatible"
      }
    },
    {
      "label": "Endpoint",
      "group": "model",
      "type": "String",
      "value": "",
      "feel": "optional",
      "binding": {
        "type": "zeebe:input",
        "name": "model_endpoint"
      },
      "condition": {
        "property": "llm",
        "oneOf": ["azure-openai", "openai-compatible"]
      }
    },
    {
      "id": "translation",
      "label": "Translation Model",
      "group": "model",
      "type": "Dropdown",
      "value": "Helsinki-NLP/opus-mt-{}-{}",
      "choices": [
        { "name": "Amazon Translate", "value": "amazon-text-translate" },
        { "name": "Azure Text Translation", "value": "azure-text-translation" },
        { "name": "Opus-MT (local)", "value": "Helsinki-NLP/opus-mt-{}-{}" }
      ],
      "binding": {
        "type": "zeebe:input",
        "name": "nmt"
      },
      "condition": {
        "property": "llm",
        "equals": "none"
      }
    },
    {
      "label": "HuggingFace Hub Translation Model",
      "group": "model",
      "type": "String",
      "value": "Helsinki-NLP/opus-mt-{}-{}",
      "feel": "optional",
      "binding": {
        "type": "zeebe:input",
        "name": "custom_nmt"
      },
      "condition": {
        "property": "translation",
        "equals": "custom"
      }
    },
    {
      "label": "OCR Model",
      "group": "model",
      "type": "Dropdown",
      "value": "none",
      "choices": [
        { "name": "None", "value": "none" },
        { "name": "Tesseract (local)", "value": "tesseract" }
      ],
      "binding": {
        "type": "zeebe:input",
        "name": "ocr"
      }
    },
    {
      "label": "Speech Recognition Model",
      "group": "model",
      "type": "Dropdown",
      "value": "openai-whisper-1",
      "choices": [
        { "name": "None", "value": "none" },
        { "name": "OpenAI Whisper API", "value": "openai-whisper-1" },
        { "name": "OpenAI Whisper Small (local)", "value": "faster_whisper-small" },
        { "name": "OpenAI Whisper Medium (local)", "value": "faster_whisper-medium" },
        { "name": "OpenAI Whisper Large (local)", "value": "faster_whisper-large" }
      ],
      "binding": {
        "type": "zeebe:input",
        "name": "asr"
      }
    },
    {
      "label": "Input Variables",
      "group": "input",
      "description": "Map of input variables to translate. Key should be the variable name. Value is the variable itself as FEEL expression.",
      "type": "Text",
      "feel": "optional",
      "binding": {
        "type": "zeebe:input",
        "name": "input_json"
      },
      "value": "={ \"myVariable\": myVariable }",
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "label": "Target Language",
      "group": "translate",
      "type": "String",
      "feel": "optional",
      "value": "English",
      "binding": {
        "type": "zeebe:input",
        "name": "language"
      },
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "label": "Result Expression",
      "description": "Expression to map the result into process variables. Result is in a temporary variable <code>result</code>, with fields for every translated field as specified in Input Variables.",
      "group": "output",
      "type": "Text",
      "feel": "required",
      "value": "={myVariableTranslated: result.myVariable}",
      "binding": {
        "type": "zeebe:taskHeader",
        "key": "result_expression"
      }
    }
  ]
}
