{
  "$schema": "https://unpkg.com/@camunda/zeebe-element-templates-json-schema/resources/schema.json",
  "name": "GPT Data Extraction Connector",
  "id": "io.holunda.connector.extract.v1",
  "description": "Extracts information from structured or unstructured input data",
  "version": 1,
  "documentationRef": "https://docs.camunda.io/docs/components/connectors/out-of-the-box-connectors/available-connectors-overview/",
  "icon": {
    "contents": "data:image/svg+xml;base64,"
  },
  "category": {
    "id": "connectors",
    "name": "Connectors"
  },
  "appliesTo": ["bpmn:Task"],
  "elementType": {
    "value": "bpmn:ServiceTask"
  },
  "groups": [
    {
      "id": "general",
      "label": "General"
    },
    {
      "id": "input",
      "label": "Input"
    },
    {
      "id": "extract",
      "label": "Data Extraction"
    },
    {
      "id": "output",
      "label": "Output Mapping"
    },
    {
      "id": "errors",
      "label": "Errors"
    }
  ],
  "properties": [
    {
      "type": "Hidden",
      "value": "gpt-extract",
      "binding": {
        "type": "zeebe:taskDefinition:type"
      }
    },
    {
      "label": "OpenAI API Key",
      "description": "The OpenAI API Key to use",
      "type": "Hidden",
      "value": "secrets.OPENAI_API_KEY",
      "binding": {
        "type": "zeebe:input",
        "name": "apiKey"
      },
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "id": "model",
      "label": "GPT Model",
      "group": "general",
      "type": "Dropdown",
      "value": "gpt-3.5-turbo",
      "choices": [
        { "name": "Standard precision, fast, cheap", "value": "gpt-3.5-turbo" },
        { "name": "Highest precision, slow, expensive", "value": "gpt-4" }
      ],
      "binding": {
        "type": "zeebe:input",
        "name": "model"
      }
    },
    {
      "label": "Input Variables",
      "group": "input",
      "description": "Map of input variables to extract data from. Key should be the variable name. Value is the variable itself as FEEL expression.",
      "type": "Text",
      "feel": "required",
      "binding": {
        "type": "zeebe:input",
        "name": "inputJson"
      },
      "value": "{ \"myVariable\": myVariable }",
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "label": "Extraction Fields",
      "description": "Specify what to extract from the input. Must be a map from result field names to descriptions of what to extract into that field.",
      "group": "extract",
      "type": "Text",
      "feel": "required",
      "value": "={\n  name: \"full name\",\n  birthdate: \"birthday in ISO format\"\n}",
      "binding": {
        "type": "zeebe:input",
        "name": "extractionJson"
      },
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "label": "Missing Data Behavior",
      "description": "What to do if requested data is not present in the input",
      "group": "extract",
      "type": "Dropdown",
      "value": "NULL",
      "choices": [
        { "name": "Return Null", "value": "NULL" },
        { "name": "Return Empty String", "value": "EMPTY" },
        { "name": "Throw Error", "value": "ERROR" }
      ],
      "binding": {
        "type": "zeebe:input",
        "name": "missingDataBehavior"
      }
    },
    {
      "label": "Result Variable",
      "description": "Name of variable to store the result in",
      "group": "output",
      "type": "String",
      "binding": {
        "type": "zeebe:taskHeader",
        "key": "resultVariable"
      }
    },
    {
      "label": "Result Expression",
      "description": "Expression to map the result into process variables",
      "group": "output",
      "type": "Text",
      "feel": "required",
      "binding": {
        "type": "zeebe:taskHeader",
        "key": "resultExpression"
      }
    },
    {
      "label": "Error Expression",
      "description": "Expression to handle errors. Details in the <a href=\"https://docs.camunda.io/docs/components/connectors/use-connectors/#bpmn-errors\" target=\"_blank\">documentation</a>",
      "group": "errors",
      "type": "Text",
      "value": "=if error.code = \"NULL\" then\n  bpmnError(\"NULL\", \"One or more values are null.\")\nelse null",
      "feel": "required",
      "binding": {
        "type": "zeebe:taskHeader",
        "key": "errorExpression"
      }
    }
  ]
}
