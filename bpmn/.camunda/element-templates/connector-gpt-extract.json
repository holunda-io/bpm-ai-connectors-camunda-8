{
  "$schema": "https://unpkg.com/@camunda/zeebe-element-templates-json-schema/resources/schema.json",
  "name": "GPT Data Extraction Connector",
  "id": "io.holunda.connector.extract.v1",
  "description": "Extracts information from structured or unstructured input data",
  "version": 1,
  "documentationRef": "https://docs.camunda.io/docs/components/connectors/out-of-the-box-connectors/available-connectors-overview/",
  "icon": {
    "contents": "data:image/svg+xml;base64,"
  },
  "category": {
    "id": "connectors",
    "name": "Connectors"
  },
  "appliesTo": ["bpmn:Task"],
  "elementType": {
    "value": "bpmn:ServiceTask"
  },
  "groups": [
    {
      "id": "model",
      "label": "Model"
    },
    {
      "id": "input",
      "label": "Input"
    },
    {
      "id": "extract",
      "label": "Data Extraction"
    },
    {
      "id": "output",
      "label": "Output Mapping"
    },
    {
      "id": "errors",
      "label": "Errors"
    }
  ],
  "properties": [
    {
      "type": "Hidden",
      "value": "io.holunda:connector-extract:1",
      "binding": {
        "type": "zeebe:taskDefinition:type"
      }
    },
    {
      "id": "model",
      "label": "LLM",
      "group": "model",
      "type": "Dropdown",
      "value": "GPT_3",
      "choices": [
        { "name": "OpenAI GPT-3.5 Turbo", "value": "GPT_3" },
        { "name": "OpenAI GPT-4", "value": "GPT_4" },
        { "name": "Aleph Alpha Luminous Supreme", "value": "LUMINOUS_SUPREME" },
        { "name": "Cohere Chat Command", "value": "COHERE_CHAT_COMMAND" }
      ],
      "binding": {
        "type": "zeebe:input",
        "name": "model"
      }
    },
    {
      "label": "Input Variables",
      "group": "input",
      "description": "Map of input variables to extract data from. Key should be the variable name. Value is the variable itself as FEEL expression.",
      "type": "Text",
      "feel": "optional",
      "binding": {
        "type": "zeebe:input",
        "name": "inputJson"
      },
      "value": "={ \"myVariable\": myVariable }",
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "label": "Instructions",
      "description": "(Optional) Additional instructions/context if the output schema is not enough.",
      "group": "extract",
      "type": "Hidden",
      "optional": true,
      "binding": {
        "type": "zeebe:input",
        "name": "instructions"
      }
    },
    {
      "label": "Output Schema",
      "description": "JSON schema of what fields to extract from the input.",
      "group": "extract",
      "type": "Text",
      "feel": "required",
      "value": "={\n  name: \"full name\",\n  age: { type: \"integer\", description: \"age in years\" }\n}",
      "binding": {
        "type": "zeebe:input",
        "name": "extractionJson"
      },
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "id": "mode",
      "label": "Extraction Mode",
      "description": "Extract general information or multiple entities (e.g. persons, products, etc.)",
      "group": "extract",
      "type": "Dropdown",
      "value": "SINGLE",
      "choices": [
        { "name": "Single", "value": "SINGLE" },
        { "name": "Multiple Entities", "value": "REPEATED" }
      ],
      "binding": {
        "type": "zeebe:input",
        "name": "mode"
      }
    },
    {
      "label": "Entities Description",
      "description": "General description of the entity type to extract, if fields are not clear enough.",
      "group": "extract",
      "type": "String",
      "feel": "optional",
      "optional": true,
      "binding": {
        "type": "zeebe:input",
        "name": "entitiesDescription"
      },
      "value": "Mentioned persons",
      "condition": {
        "property": "mode",
        "equals": "REPEATED"
      }
    },
    {
      "label": "Result Expression",
      "description": "Expression to map the result into process variables. Result is in a temporary variable <code>result</code>, with fields for every extracted field as specified in Extraction Fields.",
      "group": "output",
      "type": "Text",
      "feel": "required",
      "value": "={customerInfo: result}",
      "binding": {
        "type": "zeebe:taskHeader",
        "key": "resultExpression"
      }
    },
    {
      "label": "Error Expression",
      "description": "Expression to handle errors. Details in the <a href=\"https://docs.camunda.io/docs/components/connectors/use-connectors/#bpmn-errors\" target=\"_blank\">documentation</a>",
      "group": "errors",
      "type": "Text",
      "feel": "required",
      "binding": {
        "type": "zeebe:taskHeader",
        "key": "errorExpression"
      }
    }
  ]
}
