{
  "$schema": "https://unpkg.com/@camunda/zeebe-element-templates-json-schema/resources/schema.json",
  "name": "GPT Compose Connector",
  "id": "io.holunda.connector.compose.v1",
  "description": "Composes a body for an e-mail or letter in any language",
  "version": 1,
  "documentationRef": "https://docs.camunda.io/docs/components/connectors/out-of-the-box-connectors/available-connectors-overview/",
  "icon": {
    "contents": "data:image/svg+xml;base64,"
  },
  "category": {
    "id": "connectors",
    "name": "Connectors"
  },
  "appliesTo": ["bpmn:Task"],
  "elementType": {
    "value": "bpmn:ServiceTask"
  },
  "groups": [
    {
      "id": "general",
      "label": "General"
    },
    {
      "id": "input",
      "label": "Input"
    },
    {
      "id": "write",
      "label": "Compose"
    },
    {
      "id": "output",
      "label": "Output Mapping"
    }
  ],
  "properties": [
    {
      "type": "Hidden",
      "value": "gpt-compose",
      "binding": {
        "type": "zeebe:taskDefinition:type"
      }
    },
    {
      "label": "OpenAI API Key",
      "description": "The OpenAI API Key to use",
      "type": "Hidden",
      "value": "secrets.OPENAI_API_KEY",
      "binding": {
        "type": "zeebe:input",
        "name": "apiKey"
      },
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "id": "model",
      "label": "LLM Model",
      "group": "general",
      "type": "Dropdown",
      "value": "GPT_3",
      "choices": [
        { "name": "OpenAI GPT-3.5 Turbo", "value": "GPT_3" },
        { "name": "OpenAI GPT-4", "value": "GPT_4" }
      ],
      "binding": {
        "type": "zeebe:input",
        "name": "model"
      }
    },
    {
      "label": "Input Variables",
      "group": "input",
      "description": "Map of input variables to consider for the text. Key should be the variable name. Value is the variable itself as FEEL expression.",
      "type": "Text",
      "feel": "required",
      "binding": {
        "type": "zeebe:input",
        "name": "inputJson"
      },
      "value": "{ \"myVariable\": myVariable }",
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "label": "Style",
      "group": "write",
      "type": "Dropdown",
      "value": "formal",
      "choices": [
        { "name": "Formal", "value": "formal" },
        { "name": "Informal", "value": "informal" }
      ],
      "binding": {
        "type": "zeebe:input",
        "name": "style"
      }
    },
    {
      "label": "Tone",
      "group": "write",
      "type": "Dropdown",
      "value": "friendly",
      "choices": [
        { "name": "Friendly", "value": "friendly" },
        { "name": "Overly Friendly", "value": "overly friendly" },
        { "name": "Neutral", "value": "neutral" },
        { "name": "Assertive", "value": "assertive" }
      ],
      "binding": {
        "type": "zeebe:input",
        "name": "tone"
      }
    },
    {
      "label": "Language",
      "group": "write",
      "type": "String",
      "feel": "optional",
      "value": "English",
      "binding": {
        "type": "zeebe:input",
        "name": "language"
      },
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "label": "Text Description",
      "description": "Description of the text to compose.",
      "group": "write",
      "type": "Text",
      "feel": "optional",
      "value": "Thank the customer for subscribing to our service.",
      "binding": {
        "type": "zeebe:input",
        "name": "description"
      },
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "label": "Sender Name",
      "group": "write",
      "type": "String",
      "feel": "optional",
      "value": "My Company",
      "binding": {
        "type": "zeebe:input",
        "name": "sender"
      },
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "label": "Result Expression",
      "description": "Expression to map the result into process variables. Result text is in a temporary variable <code>result</code>.",
      "group": "output",
      "type": "Text",
      "feel": "required",
      "value": "={\"text\": result}",
      "binding": {
        "type": "zeebe:taskHeader",
        "key": "resultExpression"
      }
    }
  ]
}
