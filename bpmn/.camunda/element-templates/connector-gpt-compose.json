{
  "$schema": "https://unpkg.com/@camunda/zeebe-element-templates-json-schema/resources/schema.json",
  "name": "GPT Compose Connector",
  "id": "io.holunda.connector.compose.v1",
  "description": "Composes a body for an e-mail or letter in any language",
  "version": 1,
  "documentationRef": "https://docs.camunda.io/docs/components/connectors/out-of-the-box-connectors/available-connectors-overview/",
  "icon": {
    "contents": "data:image/svg+xml;base64,"
  },
  "category": {
    "id": "connectors",
    "name": "Connectors"
  },
  "appliesTo": ["bpmn:Task"],
  "elementType": {
    "value": "bpmn:ServiceTask"
  },
  "groups": [
    {
      "id": "general",
      "label": "General"
    },
    {
      "id": "input",
      "label": "Input"
    },
    {
      "id": "write",
      "label": "Compose"
    },
    {
      "id": "output",
      "label": "Output Mapping"
    }
  ],
  "properties": [
    {
      "type": "Hidden",
      "value": "io.holunda.connector.compose:1",
      "binding": {
        "type": "zeebe:taskDefinition:type"
      }
    },
    {
      "id": "model",
      "label": "LLM",
      "group": "general",
      "type": "Dropdown",
      "value": "GPT_3",
      "choices": [
        { "name": "OpenAI GPT-3.5 Turbo", "value": "GPT_3" },
        { "name": "OpenAI GPT-4", "value": "GPT_4" },
        { "name": "Aleph Alpha Luminous Supreme", "value": "LUMINOUS_SUPREME" },
        { "name": "Cohere Command XLarge", "value": "COHERE_COMMAND_XLARGE" }
      ],
      "binding": {
        "type": "zeebe:input",
        "name": "model"
      }
    },
    {
      "label": "Input Variables",
      "group": "input",
      "description": "Map of input variables to consider for the text. Key should be the variable name. Value is the variable itself as FEEL expression.",
      "type": "Text",
      "feel": "optional",
      "binding": {
        "type": "zeebe:input",
        "name": "inputJson"
      },
      "value": "={ \"myVariable\": myVariable }",
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "id": "type",
      "label": "Type",
      "group": "write",
      "type": "Dropdown",
      "value": "letter",
      "choices": [
        { "name": "E-Mail/Letter", "value": "letter" },
        { "name": "Chat Message", "value": "chat" },
        { "name": "Social Media Post", "value": "social" },
        { "name": "General Text", "value": "text" }
      ],
      "binding": {
        "type": "zeebe:input",
        "name": "type"
      }
    },
    {
      "label": "Style",
      "group": "write",
      "type": "Dropdown",
      "value": "formal",
      "choices": [
        { "name": "Formal", "value": "formal" },
        { "name": "Informal", "value": "informal" }
      ],
      "binding": {
        "type": "zeebe:input",
        "name": "style"
      }
    },
    {
      "label": "Tone",
      "group": "write",
      "type": "Dropdown",
      "value": "friendly",
      "choices": [
        { "name": "Friendly", "value": "friendly" },
        { "name": "Overly Friendly", "value": "overly friendly" },
        { "name": "Neutral", "value": "neutral" },
        { "name": "Assertive", "value": "assertive" }
      ],
      "binding": {
        "type": "zeebe:input",
        "name": "tone"
      }
    },
    {
      "label": "Language",
      "group": "write",
      "type": "String",
      "feel": "optional",
      "value": "English",
      "binding": {
        "type": "zeebe:input",
        "name": "language"
      },
      "constraints": {
        "notEmpty": true
      }
    },
    {
      "label": "Length",
      "group": "write",
      "type": "Dropdown",
      "value": "adequate",
      "choices": [
        { "name": "Very Brief", "value": "very brief" },
        { "name": "Brief", "value": "brief" },
        { "name": "Adequate", "value": "adequate" },
        { "name": "Lengthy", "value": "lengthy" }
      ],
      "binding": {
        "type": "zeebe:input",
        "name": "length"
      }
    },
    {
      "label": "Variance",
      "group": "write",
      "description": "<code>High</code> results in more diverse and unpredictable text, <code>None</code> makes the output focused and deterministic.",
      "type": "Dropdown",
      "value": "0",
      "choices": [
        { "name": "None", "value": "0" },
        { "name": "Low", "value": "0.2" },
        { "name": "Medium", "value": "0.5" },
        { "name": "High", "value": "0.7" }
      ],
      "binding": {
        "type": "zeebe:input",
        "name": "temperature"
      }
    },
    {
      "id": "template",
      "label": "Template",
      "group": "write",
      "type": "Dropdown",
      "value": "none",
      "choices": [
        { "name": "No Template", "value": "none" },
        { "name": "Hybrid AI Template", "value": "template" }
      ],
      "binding": {
        "type": "zeebe:input",
        "name": "template"
      },
      "condition": {
        "property": "model",
        "oneOf": ["GPT_3", "GPT_4"]
      }
    },
    {
      "label": "Text Description",
      "description": "Description of the text to compose.",
      "group": "write",
      "type": "Text",
      "feel": "optional",
      "value": "Thank the customer for subscribing to our service.",
      "binding": {
        "type": "zeebe:input",
        "name": "description"
      },
      "constraints": {
        "notEmpty": true
      },
      "condition": {
        "property": "template",
        "oneOf": ["none"]
      }
    },
    {
      "label": "Template",
      "description": "Template variables found in input variables are replaced directly, text for other variables will be generated.",
      "group": "write",
      "type": "Text",
      "value": "Hello {name},\n\n{{ body : thank the customer for his purchase }}\n\nYours,\n{agentName}",
      "binding": {
        "type": "zeebe:input",
        "name": "description"
      },
      "constraints": {
        "notEmpty": true
      },
      "condition": {
        "property": "template",
        "oneOf": ["template"]
      }
    },
    {
      "label": "Sender Name",
      "group": "write",
      "type": "String",
      "feel": "optional",
      "value": "My Company",
      "binding": {
        "type": "zeebe:input",
        "name": "sender"
      },
      "constraints": {
        "notEmpty": true
      },
      "condition": {
        "allMatch": [
          {
            "property": "type",
            "oneOf": ["letter"]
          },
          {
            "property": "template",
            "equals": "none"
          }
        ]
      }
    },
    {
      "id": "alignment",
      "label": "Alignment Principle",
      "description": "Checks and if necessary rewrites the generated text following the selected principle.",
      "group": "write",
      "type": "Dropdown",
      "value": "none",
      "choices": [
        { "name": "None", "value": "none" },
        { "name": "Sensitive", "value": "insensitive" },
        { "name": "Unoffensive", "value": "offensive" },
        { "name": "Non Harmful or Illegal", "value": "harmful1" },
        { "name": "Uncontroversial", "value": "controversial" },
        { "name": "Thoughtful", "value": "thoughtful" },
        { "name": "Young Age Appropriate", "value": "age-innappropriate" },
        { "name": "Custom", "value": "custom" }
      ],
      "binding": {
        "type": "zeebe:input",
        "name": "constitutionalPrinciple"
      },
      "condition": {
        "property": "model",
        "oneOf": ["GPT_3", "GPT_4"]
      }
    },
    {
      "label": "Custom Principle",
      "group": "write",
      "type": "Text",
      "feel": "optional",
      "optional": true,
      "value": "The text must not contain any offensive or rude language. It should always be polite and professional.",
      "binding": {
        "type": "zeebe:input",
        "name": "customPrinciple"
      },
      "condition": {
        "property": "alignment",
        "equals": "custom"
      }
    },
    {
      "label": "Result Expression",
      "description": "Expression to map the result into process variables. Result text is in a temporary variable <code>result</code>.",
      "group": "output",
      "type": "Text",
      "feel": "required",
      "value": "={\"text\": result}",
      "binding": {
        "type": "zeebe:taskHeader",
        "key": "resultExpression"
      }
    }
  ]
}
